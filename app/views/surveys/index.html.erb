
<br>
<h1 class="edit-survey-title" style="margin-left: 42%;">Your Surveys</h1>
<br> <br>
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Categories</th>
      <% if !session[:user_id].nil?%>
      <th>Published?</th>
      <%end%>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @surveys.each do |survey| %>
      <tr>
        <td><%= survey.name %></td>
        <td><%= survey.description %></td>
        <td><%= survey.categories %></td>
        <% if !session[:user_id].nil?%>
        <td><% if survey.published? == false %>
            <p>No</p>
            <% else %>
            <p>Yes</p>
            <%end%>
        </td>
        <td><%= link_to 'Show', survey %></td>
        <td><%= link_to 'Edit', edit_survey_path(survey) %></td>
        <% else %>
        <td><%= link_to 'take survey', survey_take_path(survey) %></td>
        <%end%>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<div style="margin-left: 42%;" class="footer">
<%= link_to 'New Survey', new_survey_path %> |
<%= link_to 'Logout', logout_path, method: :delete %>
</div>
